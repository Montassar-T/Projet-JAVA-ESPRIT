@startuml

enum Role {
    ADMIN
    TEACHER
    STUDENT
}

enum UserStatus {
     ACTIVE
     INACTIVE
     SUSPENDED
}

class User {
    +int id
    +String first_name
    +String last_name
    +String email
    +String password
    +Role role
    +UserStatus status
}

class Admin
class Teacher
class Student

Admin -|> User
Teacher -|> User
Student -|> User

@enduml
