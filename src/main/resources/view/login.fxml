<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.educlass.controller.AuthController"
            prefHeight="700.0" prefWidth="600.0"
            style="-fx-font-family: 'Segoe UI'; -fx-background-color: #ECF0F1;">

    <!-- ðŸ”µ Header -->
    <top>
        <VBox spacing="10"
              alignment="CENTER"
              style="-fx-background-color: #2C3E50; -fx-padding: 30;">
            <Label text="ðŸ“š EduClass"
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="Educational Management System"
                   style="-fx-font-size: 14px; -fx-text-fill: #BDC3C7;"/>
        </VBox>
    </top>

    <!-- ðŸ“ Center Login Form -->
    <center>
        <VBox spacing="20"
              alignment="CENTER"
              style="-fx-padding: 40;">

            <Label text="Adresse email"
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <TextField fx:id="emailField"
                       promptText="Email Address"
                       prefHeight="40"
                       maxWidth="350"
                       style="-fx-font-size: 14px;
                              -fx-padding: 10;
                              -fx-border-radius: 5;
                              -fx-border-color: #BDC3C7;
                              -fx-border-width: 1;"/>

            <Label text="Mot de passe"
                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           prefHeight="40"
                           maxWidth="350"
                           style="-fx-font-size: 14px;
                                  -fx-padding: 10;
                                  -fx-border-radius: 5;
                                  -fx-border-color: #BDC3C7;
                                  -fx-border-width: 1;"/>

            <Label fx:id="messageLabel"
                   style="-fx-text-fill: red;
                          -fx-font-size: 13px;"/>

            <Button text="LOGIN"
                    prefHeight="45"
                    maxWidth="350"
                    onAction="#handleLogin"
                    style="-fx-font-size: 14px;
                           -fx-font-weight: bold;
                           -fx-background-color: #3498DB;
                           -fx-text-fill: white;
                           -fx-background-radius: 5;
                           -fx-cursor: hand;"/>

        </VBox>
    </center>

</BorderPane>
