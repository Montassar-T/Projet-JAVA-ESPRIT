<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" style="-fx-font-family: 'Segoe UI', Helvetica, Arial, sans-serif; -fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.educlass.controller.AdminController">

    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af); -fx-padding: 20;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" text="Academic Structures" />
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.4">
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;">
                <padding>
                    <Insets bottom="15" left="15" right="15" top="15" />
                </padding>
                <Label style="-fx-font-weight: bold;" text="Available Structures" />
                <ListView fx:id="structureListView" VBox.vgrow="ALWAYS" />
                <HBox spacing="10">
                    <Button fx:id="addStructureBtn" maxWidth="Infinity" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Add New" HBox.hgrow="ALWAYS" />
                    <Button fx:id="deleteStructureBtn" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Delete" />
                </HBox>
            </VBox>

            <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5); -fx-padding: 15;">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Structure Details" />
                
                <GridPane hgap="10" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="100" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label text="Name:" />
                    <TextField fx:id="structNameField" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                    <Label text="Type:" GridPane.rowIndex="1" />
                    <ComboBox fx:id="structTypeCombo" prefWidth="200" GridPane.columnIndex="1" />

                    <Label text="Code:" GridPane.rowIndex="2" />
                    <TextField fx:id="structCodeField" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                    <Label text="Address:" GridPane.rowIndex="3" />
                    <TextArea fx:id="structAddressArea" prefHeight="80" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" />

                    <Label text="Manager:" GridPane.rowIndex="4" />
                    <TextField fx:id="structManagerField" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <TextField fx:id="structManagerField1" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <TextField fx:id="structManagerField11" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               <TextField fx:id="structManagerField111" style="-fx-background-radius: 5; -fx-border-color: #bdc3c7; -fx-border-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
               <rowConstraints>
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
                  <RowConstraints />
               </rowConstraints>
                </GridPane>

                <Region VBox.vgrow="ALWAYS" />
                
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Cancel" />
                    <Button fx:id="saveStructureBtn" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" text="Update Structure" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>

</BorderPane>
