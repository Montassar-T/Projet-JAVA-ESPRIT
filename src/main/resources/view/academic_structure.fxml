<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0"
            prefWidth="900.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.educlass.controller.AdminController"
            style="-fx-font-family: 'Segoe UI', Helvetica, Arial, sans-serif;
                   -fx-background-color: #f4f7f6;">

    <!-- ================= HEADER ================= -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #2c3e50, #4ca1af);
                     -fx-padding: 20;">
            <Label text="Academic Structures Management"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;"/>
        </VBox>
    </top>

    <!-- ================= CONTENT ================= -->
    <center>
        <SplitPane dividerPositions="0.35">

            <!-- ===== READ / DELETE ===== -->
            <VBox spacing="12"
                  style="-fx-background-color: white;
                         -fx-background-radius: 10;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);
                         -fx-padding: 15;">

                <Label text="Structures List"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <ListView fx:id="structureListView"
                          VBox.vgrow="ALWAYS"/>

                <HBox spacing="10">
                    <Button fx:id="createNewBtn"
                            text="âž• New"
                            onAction="#handleCreateNew"
                            HBox.hgrow="ALWAYS"
                            style="-fx-background-color: #2ecc71;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 5;"/>

                    <Button fx:id="deleteStructureBtn"
                            text="ðŸ—‘ Delete"
                            onAction="#handleDeleteStructure"
                            HBox.hgrow="ALWAYS"
                            style="-fx-background-color: #e74c3c;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 5;"/>
                </HBox>
            </VBox>

            <!-- ===== CREATE / UPDATE ===== -->
            <VBox spacing="20"
                  style="-fx-background-color: white;
                         -fx-background-radius: 10;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);
                         -fx-padding: 20;">

                <Label text="Structure Details"
                       style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <GridPane hgap="12" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Name:" GridPane.rowIndex="0"/>
                    <TextField fx:id="structNameField"
                               GridPane.rowIndex="0"
                               GridPane.columnIndex="1"/>

                    <Label text="Type:" GridPane.rowIndex="1"/>
                    <ComboBox fx:id="structTypeCombo"
                              GridPane.rowIndex="1"
                              GridPane.columnIndex="1"
                              prefWidth="200"/>

                    <Label text="Code:" GridPane.rowIndex="2"/>
                    <TextField fx:id="structCodeField"
                               GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                    <Label text="Address:" GridPane.rowIndex="3"/>
                    <TextArea fx:id="structAddressArea"
                              prefHeight="80"
                              GridPane.rowIndex="3"
                              GridPane.columnIndex="1"/>

                    <Label text="Manager:" GridPane.rowIndex="4"/>
                    <TextField fx:id="structManagerField"
                               GridPane.rowIndex="4"
                               GridPane.columnIndex="1"/>
                </GridPane>

                <Region VBox.vgrow="ALWAYS"/>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Clear"
                            onAction="#handleClearFields"
                            style="-fx-background-color: #95a5a6;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 5;"/>

                    <Button fx:id="saveStructureBtn"
                            text="Save / Update"
                            onAction="#handleSaveStructure"
                            style="-fx-background-color: #3498db;
                                   -fx-text-fill: white;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 5;"/>
                </HBox>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
